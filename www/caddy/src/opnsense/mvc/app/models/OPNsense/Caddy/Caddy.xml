                <Model>
                    <reverseproxy>
                        <source>OPNsense.Caddy.Caddy</source>
                        <items>reverseproxy.header</items>
                        <display>HeaderType,description</display>
                        <display_format>%s %s</display_format>
                    </reverseproxy>
                </Model>
                <Multiple>Y</Multiple>
            </CopyHeaders>
