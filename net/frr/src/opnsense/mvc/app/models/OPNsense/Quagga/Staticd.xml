<model>
    <mount>//OPNsense/quagga/staticd</mount>
    <description>Staticd Routing configuration</description>
    <version>1.0.5</version>
    <items>
	<enabled type="BooleanField">
	    <default>0</default>
	    <Required>Y</Required>
	</enabled>
	<iproutes>
	    <iproute type="ArrayField">
		<enabled type="BooleanField">
		    <default>1</default>
		    <Required>Y</Required>
		</enabled>
		<iproute type="CSVListField">
		    <default></default>
		    <Required>Y</Required>
		</iproute>
		<gateway type="TextField">
		    <default></default>
		    <Required>N</Required>
		</gateway>
		<interfacename type="InterfaceField">
		     <Required>Y</Required>
		     <multiple>N</multiple>
		     <default></default>
		     <AllowDynamic>Y</AllowDynamic>
		     <filters>
			 <enable>/^(?!0).*$/</enable>
		     </filters>
		</interfacename>
	    </iproute>
	</iproutes>
	<ip6routes>
	    <ip6route type="ArrayField">
		<enabled type="BooleanField">
		    <default>1</default>
		    <Required>Y</Required>
		</enabled>
		<ip6route type="CSVListField">
		    <default></default>
		    <Required>Y</Required>
		</ip6route>
		<gateway type="TextField">
		    <default></default>
		    <Required>N</Required>
		</gateway>
		<interfacename type="InterfaceField">
		     <Required>Y</Required>
		     <multiple>N</multiple>
		     <default></default>
		     <AllowDynamic>Y</AllowDynamic>
		     <filters>
			 <enable>/^(?!0).*$/</enable>
		     </filters>
		</interfacename>
	    </ip6route>
	</ip6routes>
    </items>
</model>
