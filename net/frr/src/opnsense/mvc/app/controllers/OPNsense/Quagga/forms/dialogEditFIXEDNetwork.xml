<form>
  <field>
    <id>network.enabled</id>
    <label>Enabled</label>
    <type>checkbox</type>
  </field>
  <field>
    <id>network.ipaddr</id>
    <label>Network Address</label>
    <type>text</type>
    <help>Actual Network Address</help>     
  </field>
  <field>
    <id>network.netmask</id>
    <label>Network Mask</label>
    <type>text</type>
    <help>Only Numbers</help>    
