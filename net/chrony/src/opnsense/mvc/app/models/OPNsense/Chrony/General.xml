<model>
    <mount>//OPNsense/chrony/general</mount>
    <description>Chrony configuration</description>
    <version>0.0.2</version>
    <items>
        <enabled type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </enabled>
        <port type="PortField">
            <default>323</default>
            <Required>Y</Required>
        </port>
        <ntsclient type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </ntsclient>
        <ntsnocert type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </ntsnocert>
        <peers type="HostnameField">
            <default>0.opnsense.pool.ntp.org</default>
            <Required>Y</Required>
            <FieldSeparator>,</FieldSeparator>
            <asList>Y</asList>
        </peers>
        <fallbackpeers type="HostnameField">
            <Required>N</Required>
        </fallbackpeers>
        <allowednetworks type="NetworkField">
            <Required>N</Required>
            <FieldSeparator>,</FieldSeparator>
            <asList>Y</asList>
        </allowednetworks>
    </items>
</model>
