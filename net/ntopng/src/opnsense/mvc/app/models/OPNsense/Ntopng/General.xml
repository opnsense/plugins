<model>
    <mount>//OPNsense/ntopng/general</mount>
    <description>ntopng configuration</description>
    <version>0.0.1</version>
    <items>
        <enabled type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </enabled>
        <interface type="InterfaceField">
            <Required>N</Required>
            <Multiple>Y</Multiple>
        </interface>
        <httpport type="PortField">
            <Required>Y</Required>
            <default>0</default>
        </httpport>
        <httpsport type="PortField">
            <Required>Y</Required>
            <default>3000</default>
        </httpsport>
        <dnsmode type="OptionField">
            <Required>N</Required>
            <OptionValues>
                <0>Decode DNS responses and resolve only local numeric IPs</0>
                <1>Decode DNS responses and resolve all numeric IPs</1>
                <2>Decode DNS responses and do not resolve numeric IPs</2>
                <3>Do not decode DNS responses and do not resolve numeric IPs</3>
            </OptionValues>
        </dnsmode>
    </items>
</model>
