<model>
    <mount>//OPNsense/freeradius/client</mount>
    <description>FreeRADIUS client configuration</description>
    <items>
        <clients>
                <client type="ArrayField">
                        <enabled type="BooleanField">
                                <default>1</default>
                                <Required>Y</Required>
                        </enabled>
                        <name type="TextField">
                                <default></default>
                                <Required>Y</Required>
                        </name>
                        <secret type="TextField">
                                <default></default>
                                <Required>Y</Required>
                        </secret>
                        <ip type="TextField">
                                <default></default>
                                <Required>N</Required>
                        </ip>
            </client>
        </clients>
    </items>
</model>
