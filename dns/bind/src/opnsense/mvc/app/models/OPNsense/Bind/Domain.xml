<model>
    <mount>//OPNsense/bind/domain</mount>
    <description>BIND domain configuration</description>
    <version>1.0.0</version>
    <items>
        <domains>
            <domain type="ArrayField">
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enabled>
                <type type="OptionField">
                    <default>master</default>
                    <Required>Y</Required>
                    <OptionValues>
                        <master>master</master>
                        <slave>slave</slave>
                    </OptionValues>   
                </type>
                <masterip type="HostnameField">
                    <Required>N</Required>
                </masterip>
                <domainname type="TextField">
                    <default></default>
                    <Required>Y</Required>
                </domainname>
                <ttl type="IntegerField">
                    <default>86400</default>
                    <Required>Y</Required>
                </ttl>
                <refresh type="IntegerField">
                    <default></default>
                    <Required>Y</Required>
                </refresh>
                <retry type="IntegerField">
                    <default></default>
                    <Required>Y</Required>
                </retry>
                <expire type="IntegerField">
                    <default></default>
                    <Required>Y</Required>
                </expire>
                <negative type="IntegerField">
                    <default>3600</default>
                    <Required>Y</Required>
                </negative>
            </domain>
        </domains>
    </items>
</model>
