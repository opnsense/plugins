<model>
    <mount>//OPNsense/dnscryptproxy/cloak</mount>
    <description>dnscrypt-proxy Override configuration</description>
    <version>0.1.0</version>
    <items>
        <cloaks>
            <cloak type="ArrayField">
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
