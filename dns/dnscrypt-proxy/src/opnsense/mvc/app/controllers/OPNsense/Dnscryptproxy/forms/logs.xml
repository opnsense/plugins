<form>
    <tab id="dnscryptproxy_logs_main" description="Main">
        <field>
            <target>main</target>
            <type>bootgrid</type>
            <style>log</style>
            <columns>
                <column id="line">/var/log/dnscrypt-proxy/main.log</column>
            </columns>
            <api>
                <search>/api/diagnostics/log/dnscrypt-proxy</search>
            </api>
            <row_count>20,50,100,200,500,1000,-1</row_count>
        </field>
    </tab>
