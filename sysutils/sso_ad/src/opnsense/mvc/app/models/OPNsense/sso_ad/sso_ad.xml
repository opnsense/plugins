<model>
    <mount>//OPNsense/sso_ad</mount>
    <description>
       SSO Active Directory plugin 
    </description>
    <items>
        <general>
            <Enabled type="BooleanField">
                <default>1</default>
                <Required>Y</Required>
            </Enabled>
            <DomainName type="TextField">
                <Required>Y</Required>
            </DomainName>
            <DomainDC type="TextField">
                <Required>Y</Required>
            </DomainDC>
            <DomainVersion type="OptionField">
                <default>w2008</default>
                <Required>N</Required>
                <OptionValues>
                     <w2008>Windows 2008 with AES</w2008>
                     <w2003>Windows 2003</w2003>
                </OptionValues>
            </DomainVersion>
            <DomainUser type="TextField">
                <Required>Y</Required>
            </DomainUser>
            <DomainPassword type="TextField">
                <Required>Y</Required>
            </DomainPassword>
        </general>
    </items>
</model>
