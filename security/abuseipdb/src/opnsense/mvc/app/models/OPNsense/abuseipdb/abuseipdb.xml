<model>
    <mount>//OPNsense/abuseipdb</mount>
    <description>
        abuseipdb.com firewall / reporter daemon
    </description>
    <items>
        <!-- container -->
        <general>
            <!-- fields -->
            <enabled type="BooleanField">
                <default>1</default>
                <Required>Y</Required>
            </enabled>
            <flush_on_start type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </flush_on_start>
            <log_denies type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </log_denies>
            <api_key type="TextField">
                <Required>N</Required>
            </api_key>
            <filter_id type="TextField">
                <Required>Y</Required>
            </filter_id>
            <packet_count type="TextField">
                <default>10</default>
                <Required>Y</Required>
            </packet_count>
            <packet_timeframe type="TextField">
                <default>120</default>
                <Required>Y</Required>
            </packet_timeframe>
            <log_interval type="TextField">
                <default>60</default>
                <Required>N</Required>
            </log_interval>
        </general>
    </items>
</model>
