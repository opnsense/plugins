<model>
    <mount>//OPNsense/postfix/domain</mount>
    <description>Postfix domain configuration</description>
    <version>1.1.0</version>
    <items>
        <domains>
                <domain type="ArrayField">
                        <enabled type="BooleanField">
                                <Default>1</Default>
                                <Required>Y</Required>
                        </enabled>
                        <domainname type="TextField">
                                <Default></Default>
                                <Required>Y</Required>
                        </domainname>
                        <transport type="TextField">
                                <Default></Default>
                                <Required>N</Required>
                                <Mask>/^([0-9a-zA-Z.:\-\[\]]{0,63}[0-9a-zA-Z.\-\[\]])$/u</Mask>
                                <ValidationMessage>Only 64 of the following characters are allowed: 0-9a-zA-Z.:-[] and must not end with :</ValidationMessage>
                        </transport>
                        <destination type="TextField">
                                <Default></Default>
                                <Required>N</Required>
                                <Mask>/^([0-9a-zA-Z.:\-\[\]]){1,64}$/u</Mask>
                                <ValidationMessage>Only 64 of the following characters are allowed: 0-9a-zA-Z.:-[]</ValidationMessage>
                        </destination>
            </domain>
        </domains>
    </items>
</model>
