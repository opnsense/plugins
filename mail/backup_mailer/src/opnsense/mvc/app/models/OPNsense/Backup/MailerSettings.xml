<model>
    <mount>//system/backup/mailer</mount>
    <version>1.0.0</version>
    <description>OPNsense Mailer Backup Settings</description>
    <items>
        <MailEnabled type="BooleanField">
          <default>0</default>
          <Required>Y</Required>
        </MailEnabled>
        <Receiver type="EmailField">
            <Required>Y</Required>
        </Receiver>
        <SmtpHost type="TextField">
            <Required>Y</Required>
        </SmtpHost>
        <SmtpPort type="IntegerField">
            <Required>Y</Required>
        </SmtpPort>
        <SmtpSSL type="BooleanField">
          <default>1</default>
          <Required>Y</Required>
        </SmtpSSL>
        <SmtpUsername type="TextField"/>
        <SmtpPassword type="TextField"/>
        <GpgEmail type="EmailField">
            <Required>Y</Required>
        </GpgEmail>
        <GpgPublicKey type="TextField">
            <Required>Y</Required>
        </GpgPublicKey>
    </items>
</model>
